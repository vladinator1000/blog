---
import HeaderLink from "./HeaderLink.astro"
// import DarkModeToggle from "./DarkModeToggle.astro"
---

<header>
  <a
    class="unset absolute z-10 left-[50%] -top-[100rem] translate-x-[-50%] bg-white text-black px-8 py-2 focus:top-[initial]"
    href="#main"
  >
    Skip to content
  </a>
  <nav>
    <section class="">
      <ul class="unset flex gap-4 [&>li]:p-0 text-base">
        <li class="text-gray-400">Vlady Veselinov</li>
        <li><HeaderLink href="/">Blog</HeaderLink></li>
        <li><HeaderLink href="/resume">Resume</HeaderLink></li>
      </ul>
    </section>
  </nav>
  <div
    class="max-[375px]:hidden justify-self-end py-2 flex items-center content-center text-gray-400 text-base"
  >
    <a
      class="unset ml-4 hover:text-text-link "
      href="https://github.com/vladinator1000"
    >
      <i class="fa-brands fa-github" aria-hidden="true" title="GitHub"></i>
      <span class="fa-sr-only">GitHub</span>
    </a>
    <!-- Commented because icon doesn't work -->
    <!-- <a
      class="unset text-xl ml-4 hover:text-text-link"
      href="https://www.linkedin.com/in/vladyv/"
    >
      <i class="fa-brands fa-linkedin" aria-hidden="true" title="Vlady on LinkedIn"
      ></i>
      <span class="fa-sr-only">LinkedIn</span>
    </a> -->
    <a
      class="unset ml-4 hover:text-text-link"
      href="https://bsky.app/profile/vladinator.net"
    >
      <i
        class="fa-brands fa-twitter fa-bluesky"
        aria-hidden="true"
        title="Vlady on bluesky"></i>
      <span class="fa-sr-only">bluesky</span>
    </a>
  </div>
  <!-- <DarkModeToggle /> -->
</header>
<style>
  header {
    grid-area: header;
    display: grid;
    align-items: center;
    grid-template-columns: minmax(0, 1fr) minmax(0, max-content) minmax(
        0,
        max-content
      );
  }
</style>
